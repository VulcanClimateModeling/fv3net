#!/bin/bash

url=gs://vcm-ml-experiments/microphysics-emulation/2021-12-09/direct-cloud-limited-conservative-dense-5e02cf/model.tf
tag=direct-cloud-limited-conservative-dense-5e02cf-30d
image=latest

yq  --arg url "$url" '.zhao_carr_emulation.model.path |= $url' ../configs/default.yaml > config.yaml
trap 'rm config.yaml' EXIT


argo submit prog-run-and-eval.yaml \
    --name "$tag" \
    -p image_tag="$image" \
    -p tag=$tag \
    -p config=$(base64 --wrap 0 config.yaml) | grep -v 'config:' | tee -a submitted-jobs.txt
